<UserControl x:Class="FaceTrackingBasics.AuthenticationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="650">
    <Grid x:Name="background" Background="Red">
            <TextBlock x:Name="authenticationText" Text="User Not Authenticated" FontSize="48" AllowDrop="False" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</UserControl>
