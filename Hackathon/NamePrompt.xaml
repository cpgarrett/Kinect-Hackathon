<Window x:Class="Hackathon.NamePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NamePrompt" Height="200" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Enter user's name:" FontSize="20" Height="30" Margin="10" />
            <TextBox Height="30" Width="200" FontSize="20" x:Name="userName" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="cancel" Content="Cancel" Height="30" Width="75" Margin="10" Click="cancel_Click"/>
                <Button x:Name="enter" Content="Enter" Height="30" Width="75" Margin="10" Click="enter_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
